DECLARE FUNCTION PRIMEC$ (NUMBER)

DIM MESSAGE AS STRING

OPEN "INPUT.STR" FOR INPUT AS 1
  LINE INPUT #1, MESSAGE$

NUMBER = VAL(LEFT$(RIGHT$(MESSAGE$, LEN(MESSAGE$) - 1), LEN(MESSAGE$) - 3))
PRINT PRIMEC$(NUMBER)

SYSTEM

FUNCTION PRIMEC$ (NUMBER)
  C = 0

  FOR I = 1 TO NUMBER
    IF NUMBER MOD I = 0 THEN C = C + 1
  NEXT I

  IF C = 2 THEN 
    PRIMEC$ = "true"
  ELSE
    PRIMEC$ = "false"
  END IF

END FUNCTION

